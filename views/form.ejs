<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Bilbo+Swash+Caps" rel="stylesheet"> 
    <link href="https://fonts.googleapis.com/css?family=Kalam" rel="stylesheet"> 
    <link rel="stylesheet" type="text/css" href="css/form.css">
    <script type="text/javascript" src="js/form.js" defer></script>
    <title>Document</title>
</head>
<body>
  <h1>Enquiry Form</h1>
    <section class="main">
        <form name="eform" method="Post" onsubmit="return formSubmit();"  action="" >

          <label>Student Number</label>
          <input id="number" placeholder="Cc1234567" type="text" name="number"><br/>

          <label>Name</label>
          <input id="name" placeholder="First Last" type="text" name="name"><br/>
    
          <label>Email</label>
          <input id="email" placeholder="email@domain.com" type="text" name="email"><br/>
    
          <label>Postal Code</label>
          <input id="postalcode" placeholder="X9X 9X9" type="postalcode" name="postalcode"><br/>

          <input type="submit" value="Submit">
          <p id="errors"></p>
        </form> 
    </section> 

    <section class="main">
      <h2>Receipt</h2>
        <div class="formData">
      <%
        if(typeof(errors) != 'undefined')
        {
          for (let err of errors)
          {
      %>
            <p class="errors"> Error : <%= err.msg %> </p>
      <%
          }
        }
      %>

      <%
        if(typeof(errorMessage) != 'undefined')
        {
      %>
          <p class="errors"> Error : <%= errorMessage %> </p>
      <%
        }
      %>
      <p id="formResult">Details:</p>
      <table>
        <tr>
          <th>studentNumber:</th>
          <% if(typeof(number) != 'undefined')
          {
          %>
            <td> <%= number %> </td>
          <%
          }
          %>
        </tr>
        <tr>
          <th>Name:</th>

          <% if(typeof(name) != 'undefined')
          {
          %>
            <td> <%= name %> </td>
          <%
          }
          %>
        </tr>
        <tr>
          <th>Email:</th>
          <% if(typeof(email) != 'undefined')
          {
          %>
            <td> <%= email %> </td>
          <%
          }
          %>
        </tr>
        <tr>
          <th>Postal Code:</th>
          <% if(typeof(postalcode) != 'undefined')
          {
          %>
            <td> <%= postalcode %> </td>
          <%
          }
          %>
          </tr>
        </table>
      </div>
    </section>
    <div class="clear"></div>
</body>
</html>

